<h1>Reviews Index page</h1>

<% @reviews.each do |review| %>
  Title: <%= review.title %>
  Body: <%= review.body %>
  Image path: <%= review.image_path %>
  User: <%= review.reg_user_id %>
  <hr />
<% end %>

<% if @reviews.blank? %>
  <h4>There are no reviews containing the term <%= params[:search] %>.</h4>
<% end %>

<%= link_to "Create a New Review", new_reg_user_review_path(@review),
 class: "button", id: "new-review-link" %>
