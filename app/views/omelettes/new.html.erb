<h1>New Omelette Form!</h1>

<%= form_for [@user, @omelette] do |f| %>
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title, id: 'title' %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description, id: 'description' %>
  </div>

  <div class="field">
    <%= f.label :ingredients %>
    <%= f.text_area :ingredients, id: 'ingredients' %>
  </div>

  <div class="field">
    <%= f.label :photo %>
    <%= f.file_field :photo, id: "photo" %>

  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>
